<h3>Restaurants</h3>
<%= link_to 'Add New Restaurant', new_restaurant_path %>

<%- if !@restaurants.empty? -%>
  <table class="small-4">
    <tr>
      <th>Restaurant</th>
    </tr>

    <%- @restaurants.each do |restaurant| -%>
      <tr>
        <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
      </tr>
    <%- end -%>
  </table>
<%- end -%>
