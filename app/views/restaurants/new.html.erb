<h3>Add New Restaurant</h3>
<%= link_to 'Back to Restaurants', root_path %>

<div class="small-4">
  <%= form_for @restaurant do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :city %>
    <%= f.text_field :city %>
    <%= f.label :state %>
    <%= f.text_field :state %>
    <%= f.label :zip %>
    <%= f.text_field :zip %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :category %>
    <%= f.text_field :category %>
    <%= f.submit "Submit" %>
  <%- end -%>
</div>
